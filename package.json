{
  "author": "Essi Salmenkivi <essi.salmenkivi@helsinki.fi>",
  "name": "grappa-backend",
  "version": "0.0.1",
  "main": "app.js",
  "scripts": {
    "lint": "eslint ./**/*.js || true",
    "lint:fix": "eslint ./**/*.js --fix",
    "start": "nodemon app.js",
    "pm2:start": "pm2 start -n grappa-backend app.js",
    "db": "node db/node_script",
    "db:prod": "export NODE_ENV=production|| set NODE_ENV=production&& node db/node_script",
    "test": "istanbul cover node_modules/mocha/bin/_mocha --require test/testhelper.js test/**/*.js",
    "test:noc": "mocha --require test/testhelper.js test/**/*.js",
    "test-no-coverage:watch": "npm run test-no-coverage -- --watch",
    "test:watch": "npm run test -- --watch",
    "check": "eslint ./**/*.js && npm test && npm start"
  },
  "engines": {
    "node": "5.9.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/ultra-hyper-storm-ohtuprojekti/grappa-backend.git"
  },
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.15.0",
    "connect-busboy": "0.0.2",
    "cors": "^2.7.1",
    "dotenv": "^2.0.0",
    "express": "^4.13.4",
    "imap": "^0.8.16",
    "jwt-simple": "^0.5.0",
    "mkdirp": "^0.5.1",
    "morgan": "^1.7.0",
    "nodemailer": "^2.3.1",
    "nodemon": "^1.9.1",
    "pdfkit": "^0.7.2",
    "pg": "^4.5.2",
    "pg-hstore": "^2.3.2",
    "request": "^2.69.0",
    "sequelize": "^3.19.3",
    "sqlite3": "^3.1.3"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "coveralls": "^2.11.9",
    "eslint": "^2.6.0",
    "eslint-config-airbnb": "^6.2.0",
    "eslint-plugin-react": "^4.2.3",
    "istanbul": "^0.4.3",
    "mocha": "2.4.5",
    "nock": "^8.0.0",
    "sinon": "^1.17.3",
    "supertest": "^1.2.0"
  }
}
